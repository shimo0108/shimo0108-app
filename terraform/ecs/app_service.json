
[
  {
    "name": "server",
    "image": "844136403748.dkr.ecr.ap-northeast-1.amazonaws.com/shimo0108-app:latest",
    "essential": true,
    "command": [
      "go",
      "run",
      "main.go"
    ],
    "portMappings": [
      {
        "hostPort": 9999,
        "protocol": "tcp",
        "containerPort": 9999
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "shimo0108-app",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "shimo0108-app"
      }
    },

    "environment": [
      {
        "name": "RDS_HOST",
        "value": "${db_host}"
      },
      {
        "name": "RDS_USER",
        "value": "${db_user}"
      },
      {
        "name": "RDS_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "RDS_PORT",
        "value": "5432"
      },
      {
        "name": "RDS_DB_NAME",
        "value": "${db_name}"
      },
      {
        "name": "SSM_AGENT_CODE",
        "value": "${ssm_agent_code}"
      },
      {
        "name": "SSM_AGENT_ID",
        "value": "${ssm_agent_id}"
      }
    ]
  }
]
